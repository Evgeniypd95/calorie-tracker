{
  "expo": {
    "name": "Text to Calorie AI",
    "slug": "text-to-cal-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.evgenypavlovd.texttocalai",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice input when logging meals.",
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert your voice to text when logging meals.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.91528684167-8le1u3voe1s99dkpkijqc8ppvaqkoe0m",
              "com.googleusercontent.apps.91528684167-l7p756837slij4o5vmb9ebl26jgjn43o",
              "com.evgenypavlovd.texttocalai"
            ]
          }
        ]
      },
      "scheme": "com.googleusercontent.apps.91528684167-8le1u3voe1s99dkpkijqc8ppvaqkoe0m"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.evgenypavlovd.texttocalai",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "@react-native-google-signin/google-signin"
    ]
  }
}
